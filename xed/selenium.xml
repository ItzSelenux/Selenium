<?xml version="1.0" encoding="UTF-8"?>
<!--
-->

<style-scheme id="selenium" _name="Selenium" version="1.0">

  <author>ItzSelenux</author>
  <_description>Eye-nice colorscheme</_description>

  <!-- Palette -->
  <color name="purple1"                     value="#9a66a6"/>
  <color name="purple2"                     value="#9a66a6"/>
  <color name="purple3"                     value="#903696"/>
  <color name="green1"                  value="#91a666"/>
  <color name="green2"                  value="#91a666"/>
  <color name="green3"                  value="#669636"/>
  <color name="yellow1"                     value="#a69c66"/>
  <color name="yellow2"                     value="#a69c66"/>
  <color name="yellow3"                     value="#969336"/>
  <color name="blue1"                    value="#6677a6"/>
  <color name="blue2"                    value="#6677a6"/>
  <color name="blue3"                    value="#363996"/>
  <color name="pink1"                       value="#a66685"/>
  <color name="pink2"                       value="#a66685"/>
  <color name="pink3"                       value="#ce2662"/>
  <color name="red1"                 value="#a66966"/>
  <color name="red2"                 value="#a66966"/>
  <color name="red3"                 value="#963636"/>
  <color name="aluminium1"                  value="#a6a6a6"/>
  <color name="aluminium2"                  value="#999999"/>
  <color name="aluminium3"                  value="#666666"/>
  <color name="aluminium4"                  value="#333333"/>
  <color name="aluminium5"                  value="#333333"/>
  <color name="aluminium6"                  value="#2a2a2a"/>
  <color name="white"                       value="#a6a6a6"/>
  <color name="black"                       value="#1f1f1f"/>

  <color name="aluminium4-3-blend"          value="#3a3a3a"/>
  <color name="aluminium6-5-blend"          value="#3a3a3a"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="aluminium2" background="aluminium6"/>
  <style name="selection"                   foreground="aluminium1" background="aluminium3"/>
  <style name="cursor"                      foreground="aluminium2"/>
  <style name="secondary-cursor"            foreground="aluminium4-3-blend"/>
  <style name="current-line"                background="aluminium5"/>
  <style name="line-numbers"                foreground="aluminium5" background="black"/>
  <style name="draw-spaces"                 foreground="aluminium4"/>
  <style name="background-pattern"          background="aluminium6-5-blend"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="green3" background="aluminium3"/>
  <style name="bracket-mismatch"            foreground="aluminium1" background="red2"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="aluminium1" background="aluminium3"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="aluminium1" background="aluminium3"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="aluminium3"/>
  <style name="def:shebang"                 foreground="aluminium3" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="purple3"/>
  <style name="def:string"                  foreground="purple2"/>
  <style name="def:special-char"            foreground="aluminium3"/>
  <style name="def:special-constant"        foreground="purple3"/>
  <style name="def:floating-point"          foreground="purple3"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="yellow1"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="blue1" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="green1" bold="true"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="white" bold="true"/>
  <style name="def:inline-code"             foreground="blue1"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="aluminium4"/>
  <style name="def:link-symbol"             foreground="aluminium4" bold="true"/>
  <style name="def:link-destination"        italic="true" underline="single"/>
  <style name="def:heading"                 foreground="green1" bold="true"/>
  <style name="def:thematic-break"          foreground="green1" bold="true"/>
  <style name="def:preformatted-section"    foreground="blue1"/>
  <style name="def:list-marker"             foreground="white" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="pink3"/>
  <style name="def:error"                   foreground="aluminium1" background="red2" bold="true"/>
  <style name="def:warning"                 foreground="aluminium1" background="pink1"/>
  <style name="def:note"                    background="purple1" foreground="aluminium4" bold="true"/>
  <style name="def:net-address"             italic="true" underline="single"/>


  <style name="def:heading0"                scale="3.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>


  <!-- Language specific -->
  <style name="diff:added-line"             foreground="green1"/>
  <style name="diff:removed-line"           foreground="red1"/>
  <style name="diff:changed-line"           foreground="yellow1"/>
  <style name="diff:diff-file"              foreground="green1" bold="true"/>
  <style name="diff:location"               foreground="green1"/>
  <style name="diff:special-case"           foreground="white" bold="true"/>

  <style name="latex:command"               foreground="green1" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
